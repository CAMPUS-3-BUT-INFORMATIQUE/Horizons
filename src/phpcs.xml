<?xml version="1.0"?>
<ruleset name="Custom">
    <description>Custom ruleset that allows test method names in snake_case.</description>

    <!-- Include the PSR2 standard -->
    <rule ref="PSR2"/>

    <!-- Allow method names in snake_case -->
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>
</ruleset>